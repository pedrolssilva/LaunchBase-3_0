{% extends "layout.njk" %}
{% block head %}
  <title>About - Desafio 3-1</title>
  {% endblock%}

  {% block content %}
    <div id="wrapper">
      <img src="{{about.avatar_url}}" alt="{{about.avatar_url}} image"/>
      <h1>{{about.title}}</h1>
      <h2>{{about.description}}</h2>
      <p>Principais tecnologias:</p>
      <ul>
        {% for tech in about.main_techs %}
          <li>{{tech}}</li>
        {% endfor %}
      </ul>
    </div>
  {% endblock %}