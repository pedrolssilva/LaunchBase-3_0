{% extends "admin/adminLayout.njk"%}

{% block head %}
  <title>Foodfy -Admin Receitas</title>
{% endblock %}

{% block content %}

  <main>
    <h1 class="main-title">
      Gerenciar chefs
    </h1>
    <section class="admin-cards-chefs">

      {% for chef in chefs %}
        <div class="admin-card">
          <div class="card__imaage-container admin-card__image-container">
            <img class="chef-avatar" id="admin-card-image" src="{{chef.avatar_url}}" alt="Plate image"/>
          </div>
          <div class="card__content admin-card__content">
            <h1 id="chef">{{chef.name}}</h1>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}

    </section>
  </main>

{% endblock %}