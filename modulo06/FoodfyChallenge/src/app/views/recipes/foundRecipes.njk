{% extends "layout.njk"%}

{% block content %}

  <main>
    <div id="more-accessed">
      <h1>Buscando por "{{filter}}"</h1>
    </div>

    <section class="cards">
      {% for recipe in recipes %}
        <div class="card recipes">
          <div class="card__imaage-container">
            <img id="card-image" src="{{recipe.image_url}}" alt="Plate image"/>
          </div>
          <div class="card__content">
            <h1 id="food-plate">{{recipe.title}}</h1>
            <h2 id="chef">
              por
              {{recipe.chef_name}}
            </h2>
          </div>
        </div>
      {% endfor %}
    </section>
    <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}" data-filter="{{filter}}"></div>
  </main>

  <script src="scripts.js"></script>

{% endblock %}