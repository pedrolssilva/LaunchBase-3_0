<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input type="text" name="name" placeholder="Nome do instrutor" value="{{teacher.name}}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birthdate" value="{{teacher.birthdate}}">
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="educational_level">
      <option value="highSchool" {% if teacher.educational_level == 'highSchool' %} selected="selected" {% endif %}>Médio Completo</option>
      <option value="bachelor" {% if teacher.educational_level == 'bachelor' %} selected="selected" {% endif %}>Superior Completo</option>
      <option value="masters" {% if teacher.educational_level == 'masters' %} selected="selected" {% endif %}>Mestrado</option>
      <option value="doctorateDegree" {% if teacher.educational_level == 'doctorateDegree' %} selected="selected" {% endif %}>Doutorado</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span><input type="radio" name="class_type" value="P" {% if teacher.class_type == 'P' %} checked="checked" {% endif %}>Presencial</span>
    <span><input type="radio" name="class_type" value="D" {% if teacher.class_type == 'D' %} checked="checked" {% endif %}>À distância</span>
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input type="text" name="subjects_taught" placeholder="Separe as áreas de atuaçãopor vírgula" value="{{teacher.subjects_taught}}">
  </div>
</div>

<button type="submit">Salvar</button>