{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/teachers">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/1603248/500x500) no-repeat center center / cover"></section>
    <section class="details">
      <h3>Novo Professor</h3>
      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="http://">
        </div>
      </div>

      <div class="item">
        <div>Nome</div>
        <div>
          <input type="text" name="name" placeholder="Nome do instrutor">
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="educationalLevel">
            <option value="highSchool">Médio Completo</option>
            <option value="bachelor" selected="selected">Superior Completo</option>
            <option value="masters">Mestrado</option>
            <option value="doctorateDegree">Doutorado</option>
          </select>
        </div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span><input type="radio" name="classType" value="P" checked="true">Presencial</span>
          <span><input type="radio" name="classType" value="D">À distância</span>
        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="services" placeholder="Separe as áreas de atuaçãopor vírgula">
        </div>
      </div>

      <button type="submit">Salvar</button>
    </section>
  </div>
{% endblock content %}